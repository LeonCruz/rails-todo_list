<h2>Add a new Todo</h2>

<%= form_with scope: :todo, url: todos_path, local: true do |form| %>
  <table>
    <tr>
      <th>
        <%= form.label :description %>
      </th>
      <th>
        <%= form.label :status %>
      </th>
    </tr>
    <tr>
      <td>
        <%= form.text_field :description %>
      </td>
      <td>
        <%= form.check_box :status %>
      </td>
      <td><%= form.submit "Add" %></td>
    </tr>
  </table>
<% end %>
